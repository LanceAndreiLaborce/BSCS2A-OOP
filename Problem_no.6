<?php
class Vehicle {
    public $name;
    public $speed;
    public $mileage;
    public $capacity;

    public static $type = "Vehicle";

    public function __construct($name, $speed, $mileage, $capacity) {
        $this->name = $name;
        $this->speed = $speed;
        $this->mileage = $mileage;
        $this->capacity = $capacity;
    }

    public function displayInfo() {
        echo "Vehicle Name: " . $this->name . "\n";
        echo "Speed: " . $this->speed . " km/h\n";
        echo "Mileage: " . $this->mileage . " km/l\n";
    }

    public function fare() {
        return $this->capacity * 100;
    }
}

class Bus extends Vehicle {
    public static $type = "Bus";
    public function fare() {
        $totalFare = parent::fare();
        $totalFareWithMaintenance = $totalFare + ($totalFare * 0.10);
        return $totalFareWithMaintenance;
    }

    public function displayBusInfo() {
        echo "Vehicle Type: " . self::$type . "\n";
        parent::displayInfo();
    }
}

$bus1 = new Bus("Volvo", 120, 8, 50);
$bus1->displayBusInfo();
echo "Total Fare: " . $bus1->fare() . "\n";
?>
