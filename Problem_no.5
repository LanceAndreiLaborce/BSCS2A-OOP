<?php
class Vehicle {
    public $name;
    public $speed;
    public $mileage;

    public static $type = "Vehicle";

    public function __construct($name, $speed, $mileage) {
        $this->name = $name;
        $this->speed = $speed;
        $this->mileage = $mileage;
    }

    public function displayInfo() {
        echo "Vehicle Name: " . $this->name . "\n";
        echo "Speed: " . $this->speed . " km/h\n";
        echo "Mileage: " . $this->mileage . " km/l\n";
    }
}

class Bus extends Vehicle {
    public static $type = "Bus";
    public function displayBusInfo() {
        echo "Vehicle Type: " . self::$type . "\n";
        parent::displayInfo();
    }
}

class Car extends Vehicle {
    public static $type = "Car";

    public function displayCarInfo() {
        echo "Vehicle Type: " . self::$type . "\n";
        parent::displayInfo();
    }
}

$bus1 = new Bus("Volvo", 120, 8);
$car1 = new Car("Volkswagen Golf R", 260 , 9.5);

$bus1->displayBusInfo();
echo "\n";
$car1->displayCarInfo();
?>